{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": [2, "allow-null"],
    "curly": [2, "all"],
    "no-console": 0,
    "comma-style": [2, "last"],
    "indent": [2, 2],
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  },
  "globals": {
    "window": true,
    "document": true
  },
  "plugins": [
    "react"
  ]
}
